<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <AssemblyName>AxeWindowsCLI</AssemblyName>
    <RootNamespace>AxeWindowsCLI</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>

  <ItemGroup>
    <DropSignedFile Include="$(TargetDir)\$(TargetName).exe" />
  </ItemGroup>

  <PropertyGroup>
    <AxeDigitalSign>true</AxeDigitalSign>
  </PropertyGroup>

  <Import Project="..\..\build\NetStandardRelease.targets" />

  <ItemGroup>
    <Content Include="..\..\thirdpartynotices.html" Link="thirdpartynotices.html">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.7.82" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Automation\Automation.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="README.MD">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <!-- Use a custom event to copy source files to the CLI_Full project before building !-->
  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="xcopy /y $(ProjectDir)*.cs $(ProjectDir)..\CLI_Full &gt; nul&#xD;&#xA;xcopy /y $(ProjectDir)*.md $(ProjectDir)..\CLI_Full &gt; nul&#xD;&#xA;xcopy /y $(ProjectDir)*.manifest $(ProjectDir)..\CLI_Full &gt; nul&#xD;&#xA;" />
  </Target>

</Project>
