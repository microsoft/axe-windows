<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <AssemblyName>AxeWindowsCLI</AssemblyName>
    <RootNamespace>AxeWindowsCLI</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(SignAppForRelease)'=='' ">
    <ApplicationManifest>AppManifests\UIAccess_Disabled.manifest</ApplicationManifest>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(SignAppForRelease)'=='true' ">
    <ApplicationManifest>AppManifests\UIAccess_Enabled.manifest</ApplicationManifest>
  </PropertyGroup>
  
  <ItemGroup>
    <DropSignedFileOverride>"$(TargetDir)\$(TargetName).exe"</DropSignedFileOverride>
    <AxeDigitalSign>true</AxeDigitalSign>
  </ItemGroup>

  <Import Project="..\..\build\NetStandardRelease.targets" />

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.7.82" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Automation\Automation.csproj" />
  </ItemGroup>

</Project>
