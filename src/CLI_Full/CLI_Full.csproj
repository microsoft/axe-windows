<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <AssemblyName>AxeWindowsCLIPlaceholder</AssemblyName>
    <RootNamespace>AxeWindowsCLI</RootNamespace>
    <RuntimeIdentifier>win7-x86</RuntimeIdentifier>
    <PublishSingleFile>true</PublishSingleFile>
  </PropertyGroup>

  <Import Project="..\..\build\NetStandardRelease.targets" />

  <ItemGroup>
    <Content Include="..\..\thirdpartynotices.html" Link="thirdpartynotices.html">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.7.82" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Automation\Automation.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="README.MD">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <!-- Precopy the source files from CLI when building outside the build pipeline !-->
  <Target Condition="'$(BUILD_BUILDID)' == '' " Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="del $(ProjectDir)\*.cs &gt; nul&#xD;&#xA;del $(ProjectDir)\*.md &gt; nul&#xD;&#xA;&#xD;&#xA;xcopy $(ProjectDir)..\CLI\*.cs . &gt; nul&#xD;&#xA;xcopy $(ProjectDir)..\CLI\*.md . &gt; nul&#xD;&#xA;" />
  </Target>

</Project>
